<resources>

    <!-- Base application theme. -->
    <style name="CCPTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlActivated">@color/color_accent</item>
        <item name="android:alertDialogTheme">@style/CPPTheme.AlertDialog</item>
        <item name="alertDialogTheme">@style/CPPTheme.AlertDialog</item>
    </style>

    <style name="CCPTheme.NoActionBar" parent="CCPTheme.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>Âµ
    </style>

    <style name="CPPTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_primary</item>
    </style>

    <style name="CCPTheme.Light.CustomTheme">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="colorControlActivated">@color/color_primary_dark</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="colorControlActivated">@color/color_primary</item>

    </style>
</resources>
